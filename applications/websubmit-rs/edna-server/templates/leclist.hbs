{{#*inline "page"}}
  <h2>List of course meetings</h2>

  <uli style="list-style: none;">
  {{#each lectures}}
    <li>
      {{{this.id}}}. <a href="/questions/{{{ this.id }}}">{{{ this.label }}}</a> ({{{ this.num_qs }}})
      {{#if ../admin}}
      &ndash; <small><a href="/answers/{{{ this.id }}}">answers</a> <a href="/admin/lec/{{{ this.id }}}">admin</a></small>
      {{/if}}
    </li>
  {{/each}}
  </ul>

  {{#if ../admin}}
  <hr />
  Admin: 
  <ul>
    <li>
      <a href="/admin/lec/add">add lecture</a>
    </li>
    <li>
      <a href="admin/users">see users</a>
    </li>
    <li>
      <a href="admin/anonymize">anonymize answers</a>
    </li>
  </ul>

  {{/if}}
{{/inline}}
{{~> (parent)~}}
